<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AccountStatementSelectButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:clickable">true</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/account_statement_select_selector</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="AccountStatementSelectButton.Left">
        <item name="android:layout_marginEnd" tools:ignore="NewApi">@dimen/account_statement_select_button_margin</item>
        <item name="android:layout_marginRight">@dimen/account_statement_select_button_margin</item>
    </style>

    <style name="AccountStatementSelectRowContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/account_statement_select_button_margin</item>
        <item name="android:layout_marginTop">@dimen/account_statement_select_button_margin</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:weightSum">2</item>
        <item name="layout_heightPercent">17%</item>
        <item name="layout_widthPercent">100%</item>
    </style>
</resources>
