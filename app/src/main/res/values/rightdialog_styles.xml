<resources>

    <style name="AccountRightDialogAnim">
        <item name="android:windowEnterAnimation">@anim/dialog_enter_bottom</item>
        <item name="android:windowExitAnimation">@anim/dialog_exit_bottom</item>
    </style>

    <style name="AccountRightDialogRowContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingTop">20dp</item>
        <item name="layout_heightPercent">16%</item>
        <item name="layout_widthPercent">100%</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:background">@color/right_dialog_bkg_row</item>
    </style>

    <style name="AccountRightDialogTextTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textAppearance">@style/AccountTextAppearanceTitle</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingLeft">25dp</item>
        <item name="android:paddingRight">25dp</item>
    </style>

    <style name="AccountRightDialogSubTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
        <item name="android:textAppearance">@style/AccountTextAppearanceSubTitle</item>
        <item name="android:paddingLeft">25dp</item>
        <item name="android:paddingRight">25dp</item>
    </style>

    <style name="AccountRightDialogHeading">
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textAppearance">@style/AccountTextAppearanceHeading</item>
        <item name="layout_heightPercent">20%</item>
        <item name="layout_widthPercent">100%</item>
    </style>

    <style name="AccountRightDialogRootContainer">
        <item name="android:layout_width">600dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingLeft">@dimen/right_dialog_margin_left_right_bottom</item>
        <item name="android:paddingRight">@dimen/right_dialog_margin_left_right_bottom</item>
        <item name="android:paddingTop">@dimen/right_dialog_margin_top</item>
    </style>

    <style name="AccountRightDialogNegPosButton">
        <item name="android:clickable">true</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:elevation">@dimen/account_statement_elevator</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/rightdialog_selector_btn_negative</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:layout_marginTop">3dp</item>
        <item name="android:layout_marginBottom">3dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAppearance">@style/AccountTextAppearanceNegPosButton</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="AccountRightDialogButtonBlue">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:gravity">center</item>
        <item name="android:clickable">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:background">@drawable/rightdialog_selector_btn_blue</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textAppearance">@style/AccountTextAppearanceTertiaryButton</item>
        <item name="android:textColor">@color/right_dialog_color_blue</item>
    </style>

    <style name="AccountStatementEditText" parent="StyleAccountEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:inputType">textEmailAddress</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_marginRight">15dp</item>
    </style>

    <style name="AccountTextAppearanceTertiaryButton" parent="TextAppearance.AppCompat.Title" />

    <style name="AccountTextAppearanceTitle" parent="TextAppearance.AppCompat.SearchResult.Title" />

    <style name="AccountTextAppearanceSubTitle" parent="TextAppearance.AppCompat.SearchResult.Subtitle" />

    <style name="AccountTextAppearanceNegPosButton" parent="TextAppearance.AppCompat.Caption" />

    <style name="AccountTextAppearanceHeading" parent="TextAppearance.AppCompat.Headline" />
</resources>
